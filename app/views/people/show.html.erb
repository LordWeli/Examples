<div class="container-fluid">
  <div class="col-md-6">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Person</h3>
      </div>

      <div class="box-body">
        <h4><%= @person.name %></h4>
        <% @person.files.each do |file| %>
            <%= image_tag file, class: 'border_image' ,size: '100x150' %>
            <%= link_to "X", person_path(@person, file), method: :delete, data: { confirm: "Tem certeza?" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .border_image {
    border: solid 1px #9b9b9b;
  }
</style>